@model INMOBILIARIA__Oliva_Perez.Models.Contrato

@{
    ViewData["Title"] = "Nuevo Contrato";


    var listaInmuebles = ViewBag.Inmuebles as List<INMOBILIARIA__Oliva_Perez.Models.Inmueble> ?? new List<INMOBILIARIA__Oliva_Perez.Models.Inmueble>();
    var listaInquilinos = ViewBag.Inquilinos as List<INMOBILIARIA__Oliva_Perez.Models.Inquilino> ?? new List<INMOBILIARIA__Oliva_Perez.Models.Inquilino>();
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="row g-3">
    <div class="col-md-4">
        <label asp-for="FechaInicio" class="form-label"></label>
        <input asp-for="FechaInicio" class="form-control" type="date" required />
    </div>

    <div class="col-md-4">
        <label asp-for="FechaFin" class="form-label"></label>
        <input asp-for="FechaFin" class="form-control" type="date" required />
    </div>

    <div class="col-md-4">
        <label asp-for="Monto" class="form-label"></label>
        <input asp-for="Monto" class="form-control" step="0.01" required />
    </div>

    <div class="col-md-4">
        <label asp-for="InmuebleId" class="form-label"></label>
        <select asp-for="InmuebleId" class="form-select" asp-items="@(new SelectList(listaInmuebles, "Id", "Direccion"))" required>
            <option value="">Seleccione un inmueble...</option>
        </select>
    </div>

    <div class="col-md-4">
        <label asp-for="InquilinoId" class="form-label"></label>
        <select asp-for="InquilinoId" class="form-select" asp-items="@(new SelectList(listaInquilinos, "Id", "Nombre"))" required>
            <option value="">Seleccione un inquilino...</option>
        </select>
    </div>

    <div class="col-md-12">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


