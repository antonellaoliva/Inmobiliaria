@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Contratos";
}

<div class="container mt-4">
    <h2>Contratos</h2>
    <a asp-action="Create" class="btn btn-success mb-2">
        <i class="bi bi-plus-circle"></i> Nuevo</a>

    <table class="table table-striped table-borderer">
        <thead class="table-info">
            <tr class="table-ligth">
                <th>Inmueble</th>
                <th>Inquilino</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Monto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contrato in Model)
            {
                <tr>
                    <td>@contrato.InmuebleDireccion</td>
                    <td>@contrato.InquilinoNombre</td>
                    <td>@contrato.FechaInicio.ToShortDateString()</td>
                    <td>@contrato.FechaFin.ToShortDateString()</td>
                    <td>@contrato.Monto</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@contrato.Id" class="btn btn-info btn-sm me-1">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@contrato.Id" class="btn btn-warning btn-sm me-1">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@contrato.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



