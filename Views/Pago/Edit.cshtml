@model INMOBILIARIA__Oliva_Perez.Models.Pago
@{
    ViewData["Title"] = "Editar Pago";
}

<h2>Editar Pago</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="NumeroPago"></label>
        <input class="form-control" asp-for="NumeroPago" />
        <span asp-validation-for="NumeroPago" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaPago"></label>
        <input type="date" class="form-control" asp-for="FechaPago" />
        <span asp-validation-for="FechaPago" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Monto"></label>
        <input class="form-control" asp-for="Monto" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContratoId">Contrato</label>
        <select class="form-control" asp-for="ContratoId" asp-items="ViewBag.Contratos"></select>
        <span asp-validation-for="ContratoId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a class="btn btn-secondary" asp-action="Index">Volver</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
