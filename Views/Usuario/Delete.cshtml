@model INMOBILIARIA__Oliva_Perez.Models.Usuario
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2>Eliminar Usuario</h2>

<div class="alert alert-warning">
    ¿Estás seguro que deseas eliminar al usuario <strong>@Model.Nombre @Model.Apellido</strong>?
</div>

<dl class="row">
    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>

    <dt class="col-sm-3">Rol</dt>
    <dd class="col-sm-9">@Model.Rol</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Avatar" />

    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
