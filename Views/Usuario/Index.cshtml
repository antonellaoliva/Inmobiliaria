@model List<INMOBILIARIA__Oliva_Perez.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h2>Usuarios</h2>

<p>
    <a class="btn btn-success" asp-action="Create">
    <i class="bi bi-plus-circle"></i> Nuevo</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-info">
        <tr class="table-ligth">
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Avatar</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Nombre</td>
                <td>@u.Apellido</td>
                <td>@u.Email</td>
                <td>@u.Rol</td>
                <td>
                    @if (!string.IsNullOrEmpty(u.Avatar))
                    {
                        <img src="@u.AvatarUrl" class="rounded-circle" width="50" height="50" alt="Avatar">

                    }
                    else
                    {
                        <span>No tiene</span>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-info btn-sm me-1" asp-action="Details" asp-route-id="@u.Id">
                    <i class="bi bi-eye"></i>
                    </a>
                    <a class="btn btn-sm btn-warning btn-sm me-1" asp-action="Edit" asp-route-id="@u.Id">
                    <i class="bi bi-pencil-square"></i>
                    </a>
                    <a class="btn btn-sm btn-danger btn-sm me-1" asp-action="Delete" asp-route-id="@u.Id">
                    <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
