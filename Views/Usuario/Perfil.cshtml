@model INMOBILIARIA__Oliva_Perez.Models.Usuario
@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="text-primary">
            <i class="bi bi-person-circle"></i> Mi Perfil
        </h2>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="Perfil" method="post" enctype="multipart/form-data" class="shadow p-4 rounded bg-light">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Avatar" />

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Apellido" class="form-label">Apellido</label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label">Cambiar contraseña (opcional)</label>
            <input name="nuevaClave" type="password" class="form-control" placeholder="Nueva contraseña" />
        </div>

        
        <div class="card mb-3">
            <div class="card-body text-center">
                <h5 class="card-title">Avatar actual</h5>
                <img id="imgAvatar" src="@Url.Content(Model.Avatar ?? "~/Uploads/default-avatar.png")"
                     alt="Avatar" class="img-thumbnail mb-2" style="max-height:150px;" />

                <div class="form-check">
                    <input type="checkbox" id="chkEliminarAvatar" class="form-check-input" />
                    <label class="form-check-label" for="chkEliminarAvatar">Eliminar avatar</label>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="AvatarFile" class="form-label">Subir nuevo avatar</label>
            <input asp-for="AvatarFile" type="file" class="form-control" />
            <span asp-validation-for="AvatarFile" class="text-danger"></span>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-save"></i> Guardar cambios
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const chkEliminar = document.getElementById('chkEliminarAvatar');
        const imgAvatar = document.getElementById('imgAvatar');
        const hiddenAvatar = document.querySelector('input[name="Avatar"]');

        chkEliminar.addEventListener('change', function () {
            if (this.checked) {
                imgAvatar.src = '/Uploads/default-avatar.png';
                hiddenAvatar.value = '/Uploads/default-avatar.png';
            } else {
                imgAvatar.src = '@Url.Content(Model.Avatar ?? "~/Uploads/default-avatar.png")';
                hiddenAvatar.value = '@Model.Avatar';
            }
        });
    </script>
}
