@model INMOBILIARIA__Oliva_Perez.Models.Inmueble

<h2>Editar inmueble</h2>

@if (ViewBag.Errores != null)
{
    <div class="alert alert-danger">
        @Html.Raw(ViewBag.Errores)
    </div>
}

<form asp-action="Edit" method="post" class="row g-3">
    <input type="hidden" asp-for="Id" />

    <div class="col-md-6">
        <label asp-for="Direccion" class="form-label"></label>
        <input asp-for="Direccion" class="form-control" required />
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Uso" class="form-label"></label>
        <select asp-for="Uso" class="form-select" asp-items="Html.GetEnumSelectList<INMOBILIARIA__Oliva_Perez.Models.UsoInmueble>()">
            <option value="">Seleccione...</option>
        </select>
        <span asp-validation-for="Uso" class="text-danger"></span>
    </div>

    <div class="col-md-2">
        <label asp-for="Ambientes" class="form-label"></label>
        <input asp-for="Ambientes" type="number" min="1" class="form-control" />
        <span asp-validation-for="Ambientes" class="text-danger"></span>
    </div>

    <div class="col-md-2">
        <label asp-for="Latitud" class="form-label"></label>
        <input asp-for="Latitud" type="number" step="0.0000001" class="form-control" />
        <span asp-validation-for="Latitud" class="text-danger"></span>
    </div>

    <div class="col-md-2">
        <label asp-for="Longitud" class="form-label"></label>
        <input asp-for="Longitud" type="number" step="0.0000001" class="form-control" />
        <span asp-validation-for="Longitud" class="text-danger"></span>
    </div>

    <div class="col-md-2">
        <label asp-for="Precio" class="form-label"></label>
        <input asp-for="Precio" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="PropietarioId" class="form-label"></label>
        <select asp-for="PropietarioId" class="form-select"
                asp-items="@(new SelectList(ViewBag.Propietarios, "Id", "Nombre", Model.PropietarioId))">
            <option value="">Seleccione...</option>
        </select>
        <span asp-validation-for="PropietarioId" class="text-danger"></span>
    </div>

    <div class="col-md-4">
    <label asp-for="TipoInmuebleId" class="form-label"></label>
    <select asp-for="TipoInmuebleId" class="form-select" asp-items="ViewBag.Tipos">
        <option value="">-- Seleccione un tipo --</option>
    </select>
    <span asp-validation-for="TipoInmuebleId" class="text-danger"></span>
    </div>


    <div class="col-md-2">
        <label asp-for="Estado" class="form-label"></label>
        <select asp-for="Estado" class="form-select">
            <option value="true">Disponible</option>
            <option value="false">No disponible</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Guardar cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
