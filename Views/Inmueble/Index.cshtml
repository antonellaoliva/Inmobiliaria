@model IEnumerable<INMOBILIARIA__Oliva_Perez.Models.Inmueble>

<h2>Inmuebles</h2>
<p>
    <a class="btn btn-success mb-2" href="@Url.Action("Create")">
        <i class="bi bi-plus-circle"></i> Nuevo
        </a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-info">
        <tr class="table-ligth">
            <th>Direcci√≥n</th>
            <th>Uso</th>
            <th>Tipo</th>
            <th>Ambientes</th>
            <th>Latitud</th>
            <th>Longitud</th>
            <th>Precio</th>
            <th>Propietario</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var i in Model)
        {
            <tr>
                <td>@i.Direccion</td>
                <td>@i.Uso</td>
                <td>@i.Tipo</td>
                <td>@i.Ambientes</td>
                <td>@i.Latitud</td>
                <td>@i.Longitud</td>
                <td>$@i.Precio.ToString("N2")</td>
                <td>@i.Propietario.Nombre @i.Propietario.Apellido</td>
                <td>@(i.Estado ? "Activo" : "Inactivo")</td>
                <td>
                    <a class="btn btn-info btn-sm me-1" href="@Url.Action("Details", new { id=i.Id })">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a class="btn btn-warning btn-sm me-1" href="@Url.Action("Edit", new { id=i.Id })">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a class="btn btn-danger btn-sm me-1" href="@Url.Action("Delete", new { id=i.Id })">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
