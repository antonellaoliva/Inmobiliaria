@model IList<INMOBILIARIA__Oliva_Perez.Models.Inmueble>

@{
    ViewBag.Title = "Inmuebles Disponibles";
}

<div class="container">
    <h2 class="mb-4 text-primary">
        <i class="bi bi-house-door"></i> Inmuebles filtrados
    </h2>

    
    <form method="get" asp-action="Disponibles" class="row g-3 align-items-end mb-4">
        <div class="col-md-4">
            <label for="fechaInicio" class="form-label">Fecha Inicio:</label>
            <input type="date" id="fechaInicio" name="fechaInicio" class="form-control" value="@ViewBag.FechaInicio" />
        </div>
        <div class="col-md-4">
            <label for="fechaFin" class="form-label">Fecha Fin:</label>
            <input type="date" id="fechaFin" name="fechaFin" class="form-control" value="@ViewBag.FechaFin" />
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-funnel"></i> Filtrar
            </button>
        </div>
    </form>

    
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Direcci√≥n</th>
                    <th>Precio</th>
                    <th>Ambientes</th>
                    <th>Uso</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Direccion</td>
                            <td>@item.Precio.ToString("C")</td>
                            <td>@item.Ambientes</td>
                            <td>@item.Uso</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">
                            <i class="bi bi-exclamation-circle"></i> No se encontraron inmuebles disponibles.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
