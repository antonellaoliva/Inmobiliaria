@model IEnumerable<INMOBILIARIA__Oliva_Perez.Models.Propietario>

@{
    ViewData["Title"] = "Propietarios";
    int paginaActual = ViewBag.PaginaActual ?? 1;
    int totalPaginas = ViewBag.TotalPaginas ?? 1;
}

<h1 class="mb-3">Propietarios</h1>

<p>
    <a asp-action="Create" class="btn btn-success mb-2">
        <i class="bi bi-plus-circle"></i> Nuevo
    </a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-info">
        <tr class="table-ligth">
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.DNI)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nombre</td>
            <td>@item.Apellido</td>
            <td>@item.DNI</td>
            <td>@item.Email</td>
            <td>@item.Telefono</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">
                    <i class="bi bi-eye"></i>
                </a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">
                    <i class="bi bi-pencil-square"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm me-1">
                    <i class="bi bi-trash"></i>
                </a>
            </td>
        </tr>
    }

    
    </tbody>
</table>

@if (totalPaginas > 1)
{
    <nav aria-label="PaginaciÃ³n">
        <ul class="pagination">
            <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-pagina="@(paginaActual - 1)">Anterior</a>
            </li>

            @for (int i = 1; i <= totalPaginas; i++)
            {
                <li class="page-item @(i == paginaActual ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pagina="@i">@i</a>
                </li>
            }

            <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-pagina="@(paginaActual + 1)">Siguiente</a>
            </li>
        </ul>
    </nav>
}