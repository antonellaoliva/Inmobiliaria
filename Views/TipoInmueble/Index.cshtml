@model IEnumerable<INMOBILIARIA__Oliva_Perez.Models.TipoInmueble>

<h2>Tipos de Inmueble</h2>
<p>
    <a asp-action="Create" class="btn btn-success mb-2">
    <i class="bi bi-plus-circle"></i> Nuevo  </a>
</p>
<table class="table table-striped table-bordered">
    <thead class="table-info">
        <tr class="table-ligth">
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Nombre</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">
                <i class="bi bi-eye"></i>
                </a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">
                <i class="bi bi-pencil-square"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm me-1">
                <i class="bi bi-trash"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
